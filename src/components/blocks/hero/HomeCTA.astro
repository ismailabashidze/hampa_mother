---
// Home page CTA Section
// ------------
// Description: A centered call to action section that contains: a title, text, a user review snippet, a button and a image.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Button from '../../ui/Button.astro'
import AvatarGroup from '../../ui/AvatarGroup.astro'

// Props
export interface Props {
	lang?: string
}

const { lang = 'en' } = Astro.props

// Content
// - Hero Image
import heroImage from '../../../assets/hero-01.png'
// - Avatars
import user1 from '../../../assets/avatars/avatar-01.webp'
import user2 from '../../../assets/avatars/avatar-02.webp'
import user3 from '../../../assets/avatars/avatar-03.webp'
const avatars = [
	{ image: { src: user1.src, alt: 'user name' }, link: '/' },
	{ image: { src: user2.src, alt: 'user name' }, link: '/' },
	{ image: { src: user3.src, alt: 'user name' }, link: '/' }
]

// Language-specific content
const content = {
	fa: {
		chip: 'نسخه اول تابستان ۱۴۰۴',
		title: 'هم‌پای مادر: پشتیبانی هوشمند برای مادران',
		description: 'پشتیبانی ۲۴/۷ هوش مصنوعی با نظارت روانشناس کودک، فعالیت‌های هوشمند، آموزش و غربالگری اولیه برای مسایل تربیتی کودکان.',
		button: 'شروع رایگان',
		imageAlt: 'سکوی هم‌پای مادر'
	},
	en: {
		chip: 'First Version - Summer 2025',
		title: 'MamaTogether: Smart Support for Mothers',
		description: '24/7 AI support with child psychologist oversight, smart activities, education, and early screening for parenting challenges.',
		button: 'Start Free Trial',
		imageAlt: 'MamaTogether Platform'
	}
}

const currentContent = content[lang as keyof typeof content] || content.en
---

<Section id="intro" padding="top" classes="bg-neutral-50 dark:bg-neutral-900">
	<Row>
		<Col span="2" />
		<Col span="8" align="center">
      <ChipNotification radius="rounded-full" classes="mb-6">
        <strong>{currentContent.chip}</strong>
        <AvatarGroup avatars={avatars} radius="rounded-full" slot="button" />
      </ChipNotification>
      <h1>
        {currentContent.title}
      </h1>

      <p class="pb-0 text-lg">{currentContent.description}</p>
      <Button size="lg" link="/">{currentContent.button}</Button>
		</Col>
		<Col span="2" />
		<Col span="2" />
		<Col span="8">
      <Image
        src={heroImage}
        alt={currentContent.imageAlt}
				class="translate-y-8 shadow-2xl shadow-neutral-200 dark:shadow-neutral-950"
				format="webp"
			/></Col
		>
		<Col span="2" />
	</Row>
</Section>
