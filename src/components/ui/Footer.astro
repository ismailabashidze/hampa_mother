---
// Footer
// ------------
// Description: the website footer is the section of content
// Reference: https://wind-ui.com/components/footers/

// Components
// - UI
import { Icon } from 'astro-icon/components'

// Data
import { socialLinks } from '../../config/socialLinks'
import { getLanguageFromUrl, addLanguageToUrl } from '../../config/i18n'

const currentLang = getLanguageFromUrl(Astro.url.pathname)

// Language-specific footer content
const footerContent = {
	fa: {
		logo: {
			src: '/logo.png',
			alt: 'هم‌پای مادر لوگو',
			text: 'هم‌پای مادر'
		},
		aboutText: 'هم‌پای مادر سکوی ترکیبی است که هوش مصنوعی ۲۴/۷ را با نظارت روانشناس کودک ترکیب می‌کند تا از مادران در چالش‌های روزمره فرزندپروری با فعالیت‌های هوشمند، آموزش و غربالگری اولیه حمایت کند.',
		columns: [
			{
				category: 'محصول',
				subCategories: [
					{ subCategory: 'امکانات', subCategoryLink: '/features' },
					{ subCategory: 'سوالات متداول', subCategoryLink: '/faq' },
					{ subCategory: 'قیمت‌گذاری', subCategoryLink: '/pricing' },
					{ subCategory: 'تغییرات', subCategoryLink: '/changelog' },
					{ subCategory: 'شرایط', subCategoryLink: '/terms' }
				]
			},
			{
				category: 'درباره ما',
				subCategories: [
					{ subCategory: 'درباره ما', subCategoryLink: '/' },
					{ subCategory: 'اخبار', subCategoryLink: '/blog' },
					{ subCategory: 'کارجویی', subCategoryLink: '/blog' }
				]
			},
			{
				category: 'تماس با ما',
				subCategories: [
					{ subCategory: 'تماس', subCategoryLink: '/contact' },
					{ subCategory: 'پشتیبانی', subCategoryLink: '/contact' },
					{ subCategory: 'همکاری', subCategoryLink: '/contact' }
				]
			}
		],
		copywrite: '© هم‌پای مادر ۲۰۲۴.'
	},
	en: {
		logo: {
			src: '/logo.png',
			alt: 'MamaTogether Logo',
			text: 'MamaTogether'
		},
		aboutText: 'MamaTogether is a hybrid platform that combines 24/7 AI guidance with child psychologist oversight to support mothers in daily parenting challenges with smart activities, education, and early screening.',
		columns: [
			{
				category: 'Product',
				subCategories: [
					{ subCategory: 'Features', subCategoryLink: '/features' },
					{ subCategory: 'FAQ', subCategoryLink: '/faq' },
					{ subCategory: 'Pricing', subCategoryLink: '/pricing' },
					{ subCategory: 'Changelog', subCategoryLink: '/changelog' },
					{ subCategory: 'Terms', subCategoryLink: '/terms' }
				]
			},
			{
				category: 'About us',
				subCategories: [
					{ subCategory: 'About us', subCategoryLink: '/' },
					{ subCategory: 'News', subCategoryLink: '/blog' },
					{ subCategory: 'Careers', subCategoryLink: '/blog' }
				]
			},
			{
				category: 'Get in touch',
				subCategories: [
					{ subCategory: 'Contact', subCategoryLink: '/contact' },
					{ subCategory: 'Support', subCategoryLink: '/contact' },
					{ subCategory: 'Join us', subCategoryLink: '/contact' }
				]
			}
		],
		copywrite: '© MamaTogether 2024.'
	}
}

const currentFooter = footerContent[currentLang as keyof typeof footerContent] || footerContent.en
---

<footer class="footer">
	<!-- Main footer -->
	<div class="footer__main">
		<div class="footer__container">
			<div class="footer__cols">
				<div class="footer__col">
                    <a aria-label="webiste logo" aria-current="page" class="footer__main-brand" href={addLanguageToUrl('/', currentLang)}>
						<img src={currentFooter.logo.src} alt={currentFooter.logo.alt} width="32" height="32" />
						{currentFooter.logo.text}
					</a>
					<p>
						{currentFooter.aboutText}
					</p>
				</div>
				{
					currentFooter.columns.map((column) => (
						<div class="footer__col">
							<h3>{column.category}</h3>
							<ul>
								{column.subCategories.map((subCategory) => (
                                    <li>
                                        <a href={addLanguageToUrl(subCategory.subCategoryLink, currentLang)}> {subCategory.subCategory} </a>
                                    </li>
								))}
							</ul>
						</div>
					))
				}
			</div>
		</div>
	</div>
	<!-- Sub Footer -->
	<div class="footer__sub">
		<div class="footer__container">
			<div class="footer__sub-cols">
				<div class="footer__sub-col">{currentFooter.copywrite}</div>
				<nav aria-labelledby="footer-social-links-dark" class="footer__sub-col text-right">
					<h2 class="sr-only" id="footer-social-links-dark">Social Media Links</h2>
					<ul>
						{
							socialLinks.map((social) => (
								<li>
									<a href={social.link} aria-label={social.name}>
										<Icon name={social.icon} />
									</a>
								</li>
							))
						}
					</ul>
				</nav>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		@apply text-neutral-500 dark:text-neutral-300;
	}
	.footer a {
		@apply transition-colors duration-300 hover:text-primary-500 focus:text-primary-600;
	}
	.footer__main {
		@apply border-t border-neutral-100 bg-neutral-50 pb-12 pt-16 text-sm dark:border-neutral-900 dark:bg-neutral-950 [&_li]:mb-2 [&_li]:leading-6;
	}
	.footer__main h3 {
		@apply mb-6 text-base font-medium leading-8 text-neutral-700 dark:text-neutral-50;
	}
	.footer__main-brand {
		@apply mb-6 flex items-center gap-2 whitespace-nowrap font-headings text-xl font-bold leading-6 text-neutral-700 focus:outline-none dark:text-neutral-50;
	}
	.footer__container {
		@apply container mx-auto px-6;
	}

	.footer__cols {
		@apply grid grid-cols-4 gap-6 md:grid-cols-8 lg:grid-cols-12;
	}

	.footer__col {
		@apply col-span-2 first:col-span-4 md:col-span-4 md:first:col-span-8 lg:col-span-2 lg:first:col-span-6 lg:first:max-w-96;
	}
	.footer__sub {
		@apply border-t border-neutral-200 bg-neutral-100 py-4 text-sm text-neutral-600 dark:border-neutral-900 dark:bg-neutral-800/50 dark:text-neutral-400;
	}
	.footer__sub ul {
		@apply flex items-center justify-end gap-6;
	}
	.footer__sub a {
		@apply [&_svg]:h-4 [&_svg]:w-4 [&_svg]:shrink-0;
	}
	.footer__sub-cols {
		@apply grid grid-cols-4 items-center gap-6 md:grid-cols-8 lg:grid-cols-12;
	}

	.footer__sub-col {
		@apply col-span-2 md:col-span-4 lg:col-span-6;
	}
</style>
