---
// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import FormHero from '../../components/blocks/hero/ContactHero.astro'
import CTA from '../../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../../components/blocks/contact/ContactCards.astro'
import SocialProof from '../../components/blocks/socialproof/Basic.astro'

// Content
// - i18n
import { isValidLanguage, defaultLanguage } from '../../config/i18n'

// Get language from URL params
const { lang } = Astro.params

// Validate language parameter
if (!lang || !isValidLanguage(lang)) {
	return Astro.redirect(`/${defaultLanguage}/contact`)
}

// - SEO
const SEO = (() => {
	if (lang === 'en') {
		return {
			title: 'MamaTogether | Get in Touch with Us',
			description:
				'Have questions about parenting support or need assistance? Contact MamaTogether today for support, inquiries, or feedback about our AI + psychologist platform.'
		}
	}
	return {
		title: 'هم‌پای مادر | با ما در تماس باشید',
		description:
			'سوال در مورد پشتیبانی از فرزندپروری دارید یا به کمک نیاز دارید؟ امروز با هم‌پای مادر تماس بگیرید برای پشتیبانی، پرسش‌ها، یا بازخورد درباره پلتفرم هوش مصنوعی + روانشناس ما.'
	}
})()
// - Page Header
const header = (() => {
	if (lang === 'en') {
		return {
			title: 'Get Answers to Your <strong>Parenting</strong> Questions.',
			text: "Whether you have a question about our AI guidance, need support with psychologist consultations, or just want to share your feedback, we're all ears. Reach out to us and we'll get back to you as soon as possible."
		}
	}
	return {
		title: 'پاسخ به سوالات <strong>فرزندپروری</strong> شما',
		text: "چه سوالی در مورد راهنمایی هوش مصنوعی ما دارید، به پشتیبانی با مشاوره روانشناس نیاز دارید، یا فقط می‌خواهید بازخورد خود را به اشتراک بگذارید، ما گوش به فراموش نمی‌کنیم. با ما تماس بگیرید و ما در اسرع وقت با شما تماس خواهیم گرفت."
	}
})()

export async function getStaticPaths() {
	return [
		{ params: { lang: 'en' } },
		{ params: { lang: 'fa' } }
	]
}
---

<Layout title={SEO.title} description={SEO.description} lang={lang}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards lang={lang} classes="dark:bg-neutral-950/80" />
	<SocialProof classes="dark:bg-neutral-950/80" />
	<CTA />
</Layout>